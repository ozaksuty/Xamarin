<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Meetup2016.Views.Menu">
  <StackLayout VerticalOptions="FillAndExpand">
    <ListView x:Name="lvMenu" HasUnevenRows="True" BackgroundColor="#455A64">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Spacing="0">
              <StackLayout Padding="20,10" Spacing="0" Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="#455A64">
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                  <Label Text="{Binding Title}" TextColor="#CFD8DC" FontSize="14" FontAttributes="Bold" YAlign="Center" HorizontalOptions="StartAndExpand" />
                </StackLayout>
              </StackLayout>
              <StackLayout HeightRequest="3" BackgroundColor="#607D8B"></StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>