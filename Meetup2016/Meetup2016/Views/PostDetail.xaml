<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Meetup2016.Views.PostDetail">
  <ScrollView>
    <StackLayout Padding="20,10" Spacing="0" Orientation="Horizontal" HorizontalOptions="Fill" x:Name="stckLayout">
      <StackLayout HorizontalOptions="StartAndExpand">
        <Label x:Name="txtTitle" TextColor="#455A64" FontSize="14" FontAttributes="Bold" YAlign="Center" HorizontalOptions="StartAndExpand"></Label>
        <StackLayout Orientation="Horizontal">
          <Label x:Name="txtContent" TextColor="#455A64" FontSize="12" YAlign="Center" HorizontalOptions="StartAndExpand"></Label>
        </StackLayout>
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>